@model IEnumerable<Musebox_Web_Project.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<section id="brands" class="brands">
    <div class="container">
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>

        <div class="search-container">
            <form asp-action="SearchB" id="brandS">
                <input id="brandName" autocomplete="off" name="name" placeholder="filter by name...">
            </form>
        </div>

        <table class="table">
            <thead>
                <tr class="table100-head">
                    <th>
                        @Html.DisplayNameFor(model => model.BrandName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandName)
                            </td>
                            <td class="td-actions">
                                <a asp-action="Edit" asp-route-id="@item.BrandId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.BrandId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.BrandId">Delete</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        @if (Model.Count() == 0)
        {
            <div class="section-title">
                <h2>No Brands</h2>
            </div>
        }
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

@section Scripts{

    <script src="~/js/S/searchBrand.js"></script>

}