
@{ ViewData["Title"] = "Group";
    Layout = "_Layout"; }

@using Musebox_Web_Project.Controllers


@model List<Group<string, Product>>

@{
    ViewBag.Title = "LINQ Grouping";
}


<section id="products" class="products">

    <div class="container">

        <div class="section-title">

            <h1>Grouping Items by Type</h1>
        </div>


        <table class="table">
            <tbody>
                @foreach (var group in Model)
                {

                    <tr class="table100-head"><th colspan="3" style="font-size:25px; background-color: #220235 ">@group.Key</th></tr>
                    <tr><th style="font-size:20px">Brand</th><th style="padding-left:90px; font-size:20px" >Product Name</th></tr>

                    foreach (var Product in group.Values)
                    {
                        <tr><td>@Product.ProductType</td><td style="padding-left:100px">@Product.ProductName</td><td></tr>
                    }
                }
            </tbody>
        </table>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        <style>
            table {
                border-collapse: collapse;
                width: 100%;
                background-color: #f8f8f8;
                border: 1.5px solid black;
            }
        </style>

    </div>



</section>


